<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_top_height"
            android:layout_marginTop="@dimen/top_bar_height"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sliding_menu_avatar"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/image_default"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <TextView
                android:id="@+id/sliding_menu_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sliding_menu_avatar"
                android:layout_marginTop="@dimen/dimen_small"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/user_name"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sliding_menu_home"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_large"
                android:onClick="onTabSelect"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/tab_home_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_small"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/home"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_menu_message"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_large"
                android:onClick="onTabSelect"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/tab_message_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_small"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/message"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sliding_menu_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_large"
                android:onClick="onTabSelect"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/tab_user_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_small"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@string/setting"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>