<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/normal_dialog_bg" >

	<RelativeLayout
		android:id="@+id/item_male"
		android:layout_width="300dp"
		android:layout_height="48dp"
		android:paddingLeft="@dimen/dimen_normal"
		android:paddingRight="@dimen/dimen_normal"
		android:background="@drawable/item_normal_selector"
		android:clickable="true"
		android:layout_marginTop="@dimen/dimen_small">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:textColor="@color/text_color_1"
			android:textSize="16sp"
			android:text="@string/male"/>
		<ImageView
			android:id="@+id/image_male"
			android:src="@drawable/redio_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.3dp"
		android:layout_alignParentBottom="true"
		android:background="@color/grey_dark_transparent"/>

	<RelativeLayout
		android:id="@+id/item_female"
		android:layout_width="300dp"
		android:layout_height="48dp"
		android:paddingLeft="@dimen/dimen_normal"
		android:paddingRight="@dimen/dimen_normal"
		android:background="@drawable/item_normal_selector"
		android:clickable="true"
		android:layout_marginTop="@dimen/dimen_small">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:textColor="@color/text_color_1"
			android:textSize="16sp"
			android:text="@string/female"/>
		<ImageView
			android:id="@+id/image_female"
			android:src="@drawable/redio_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>
	</RelativeLayout>

</LinearLayout>
