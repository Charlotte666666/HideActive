<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_light"
    android:padding="@dimen/activity_padding_small"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_padding_small"
        android:paddingRight="@dimen/activity_padding_small"
        android:background="@drawable/post_list_item_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_logo"
                android:src="@mipmap/user_logo_default"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp"
                android:layout_width="40dp">
            </ImageView>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding_small"
                android:layout_gravity="center_vertical"
                android:text="30%"
                android:textColor="@color/text_color_1"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:text="30%"
            android:textColor="@color/text_color_1"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/post_image"
            android:src="@mipmap/image_default"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:layout_height="150dp"
            android:layout_width="150dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/post_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/comment"
                android:background="@color/transparent"
                android:text="6"
                android:textColor="@color/text_color_1"
                android:textSize="14sp" />
            <Button
                android:id="@+id/post_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/like_default"
                android:background="@color/transparent"
                android:text="5"
                android:textColor="@color/text_color_1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>