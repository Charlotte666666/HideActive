<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_160dp"
    android:background="@drawable/navigation_header_bg"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingBottom="@dimen/dimen_32dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/ll_login"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_logo"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@mipmap/image_default"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="@dimen/dimen_2dp"
            fresco:roundingBorderColor="@color/white"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="@dimen/dimen_56dp" />

        <TextView
            android:id="@+id/tv_sick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:text="Android Studio"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_un_login"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_border2grey_bg"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_border2grey_bg"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

</LinearLayout>
