<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/white" >

    <Button
        android:id="@+id/btn_top_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_small"
        android:paddingRight="@dimen/dimen_small"
        android:textColor="@drawable/top_bar_btn_text_selector"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/tv_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="title"
        android:textColor="@color/text_color_1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_small"
        android:paddingRight="@dimen/dimen_small"
        android:textColor="@drawable/top_bar_btn_text_selector"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:background="@color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color"/>
</RelativeLayout>