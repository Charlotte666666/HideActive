<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 跳转时不显示黑色 -->
        <!--<item name="android:windowBackground">@null</item>  -->
    	<!--<item name="android:windowContentOverlay">@null</item>  &lt;!&ndash; 去除阴影 &ndash;&gt;-->
    	<!--<item name="android:windowIsTranslucent">false</item>  -->
    	<!--<item name="android:windowAnimationStyle">@null</item>  -->
    	<!--<item name="android:windowDisablePreview">true</item>  -->
    	<!--<item name="android:windowNoDisplay">false</item>-->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:itemBackground">@drawable/btn_action_bar_selector</item>
        <item name="android:actionBarItemBackground">@drawable/btn_action_bar_selector</item>
        <item name="android:itemTextAppearance">@style/CustomActionBarOverflow</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomActionButtonOverflow</item>

        <item name="indic"></item>
    </style>
    <!-- ActionBar 样式 start -->
    <style name="CustomActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
    	<item name="android:background">@color/actionbar_bg</item>
    	<item name="android:titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>
    
    <style name="CustomActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>  
  
    <style name="CustomActionBarOverflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
  
    <style name="CustomActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@mipmap/actionbar_more</item>
    </style>
    <!-- ActionBar 样式 end -->

    <style name="NormalDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
    </style>
	
    <style name="NormalListView">  
	    <item name="android:cacheColorHint">@color/transparent</item>  
	    <item name="android:fadingEdge">none</item>
	    <item name="android:scrollbars">none</item>
	    <item name="android:listSelector">@null</item>
	    <item name="android:divider">@null</item> 
	</style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>
