<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">@color/green_dark</item>
        <!-- 标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarTitleTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- tab样式 -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_3</item>
    </style>

    <style name="NormalDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
    </style>
	
    <style name="NormalListView">  
	    <item name="android:cacheColorHint">@color/transparent</item>  
	    <item name="android:fadingEdge">none</item>
	    <item name="android:listSelector">@null</item>
	    <item name="android:divider">@null</item> 
	</style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="AppTheme.MainTheme" />

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
