<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/grey_dark_transparent"/>
            <corners
                android:topLeftRadius="@dimen/dimen_2dp"
                android:topRightRadius="@dimen/dimen_2dp"
                android:bottomRightRadius="@dimen/dimen_2dp"
                android:bottomLeftRadius="@dimen/dimen_2dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey_dark_transparent"/>
            <corners
                android:topLeftRadius="@dimen/dimen_2dp"
                android:topRightRadius="@dimen/dimen_2dp"
                android:bottomRightRadius="@dimen/dimen_2dp"
                android:bottomLeftRadius="@dimen/dimen_2dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent" />
            <corners
                android:topLeftRadius="@dimen/dimen_2dp"
                android:topRightRadius="@dimen/dimen_2dp"
                android:bottomRightRadius="@dimen/dimen_2dp"
                android:bottomLeftRadius="@dimen/dimen_2dp"/>
            <stroke
                android:width="@dimen/line_width"
                android:color="@color/grey_dark" />
        </shape>
    </item>
</selector>